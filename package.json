{
  "name": "@hgraph/graphql",
  "version": "0.1.2",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "description": "Module to setup and create GraphQL services using TypeGraphQL package",
  "author": {
    "name": "Rinto Jose",
    "email": "rintoj@gmail.com"
  },
  "repository": "https://github.com/rintoj/hypergraph-graphql.git",
  "scripts": {
    "test": "jest",
    "lint": "eslint --fix && tsc -p . --noEmit && yarn prettier",
    "prettier": "prettier --write \"**/src/**/*.{ts,tsx}\" -c",
    "build": "rimraf dist && tsc -p ."
  },
  "license": "MIT",
  "private": false,
  "dependencies": {
    "@apollo/federation": "0.23.1",
    "@apollo/gateway": "0.28.1",
    "apollo-server-express": "2.25.2",
    "chalk": "^4.1.0",
    "class-validator": "0.14.0",
    "core-js": "^3.27.0",
    "graphql": "^15.5.1",
    "jest": "29.0.3",
    "lodash": "^4.17.21",
    "reflect-metadata": "^0.1.13",
    "ts-jest": "29.0.0",
    "tsds-tools": "^1.0.6",
    "tsyringe": "^4.7.0",
    "type-graphql": "1.1.1",
    "typedi": "^0.10.0"
  },
  "devDependencies": {
    "@types/jest": "^29.0.1",
    "@types/lodash": "^4.14.195",
    "@types/node": "^18.7.16",
    "@typescript-eslint/eslint-plugin": "^5.36.2",
    "@typescript-eslint/parser": "^5.36.2",
    "eslint": "^8.23.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-jest": "^27.0.4",
    "eslint-plugin-prettier": "^4.2.1",
    "prettier": "^2.7.1",
    "rimraf": "^5.0.1",
    "typescript": "^5.1.6"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "testEnvironment": "node",
    "collectCoverage": false,
    "transform": {
      "^.+\\.(ts|tsx)$": [
        "ts-jest",
        {
          "testPathIgnorePatterns": [
            "/node_modules/",
            "/dist/"
          ],
          "isolatedModules": true,
          "tsconfig": "./tsconfig.json"
        }
      ]
    },
    "collectCoverageFrom": [
      "**/*.{ts,tsx}",
      "!**/dist/**",
      "!**/coverage/**",
      "!**/node_modules/**",
      "!**/src/decorators/**",
      "!**/src/error/**",
      "!**/test/**"
    ]
  },
  "release": {
    "branches": [
      "master"
    ]
  }
}
